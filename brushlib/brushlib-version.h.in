#if !defined (__BRUSHLIB_H_INSIDE__) && !defined (BRUSHLIB_COMPILATION)
#error "Only <brushlib/brushlib.h> can be included directly."
#endif

#ifndef __BRUSHLIB_VERSION_H__
#define __BRUSHLIB_VERSION_H__

#define BRUSHLIB_MAJOR_VERSION     (@BRUSHLIB_MAJOR_VERSION@)
#define BRUSHLIB_MINOR_VERSION     (@BRUSHLIB_MINOR_VERSION@)
#define BRUSHLIB_MICRO_VERSION     (@BRUSHLIB_MICRO_VERSION@)
#define BRUSHLIB_VERSION           @BRUSHLIB_VERSION@
#define BRUSHLIB_VERSION_STR       "@BRUSHLIB_VERSION@"

#define BRUSHLIB_VERSION_HEX       ((BRUSHLIB_MAJOR_VERSION << 24) | \
                                   (BRUSHLIB_MINOR_VERSION << 16) | \
                                   (BRUSHLIB_MICRO_VERSION << 8))

#define BRUSHLIB_CHECK_VERSION (major,minor,micro)    \
  (BRUSHLIB_MAJOR_VERSION > (major) ||               \
   (BRUSHLIB_MAJOR_VERSION == (major) &&             \
    BRUSHLIB_MINOR_VERSION > (minor)) ||             \
   (BRUSHLIB_MAJOR_VERSION == (major) &&             \
    BRUSHLIB_MINOR_VERSION == (minor) &&             \
    BRUSHLIB_MICRO_VERSION >= (micro)))

#endif /* __BRUSHLIB_VERSION_H__ */

